<%= form_tag('/search', method: 'get', class: 'search') do %>
  <%= text_field_tag :search, params[:search], class: 'search-input', placeholder: 'black boots, etc' %>
  <%= text_field_tag :email, params[:email], placeholder: 'email' %>
  <%= submit_tag('Search', class: 'button search-submit') %>
<% end %>

